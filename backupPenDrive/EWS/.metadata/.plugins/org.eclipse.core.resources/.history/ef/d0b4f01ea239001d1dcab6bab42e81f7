package pruebaMVC1;

import java.util.Observable;

public class Modelo extends Observable{
	int valor;
	static Modelo unico;
	
	Modelo(){
		if 
		valor = 0;
	}
	
	void sumar() {
		System.out.println("Procedemos a incrementar el contador");
		valor++;
		setChanged();
		notifyObservers();
	}
	
	int obtenerValor() {
		return valor;
	}
	
	boolean esUnico() {
		if(!unico) {
			return false;
		}
	}
}
