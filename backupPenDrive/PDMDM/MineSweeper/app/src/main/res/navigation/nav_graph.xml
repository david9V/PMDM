<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.myapplication.FirstFragment"
        android:label="Buscaminas"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_EasyFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_HardFragment"
            app:destination="@id/HardFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.myapplication.EasyFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>

    <fragment
        android:id="@+id/HardFragment"
        android:name="com.example.myapplication.HardFragment"
        android:label="@string/hard_fragment_label"
        tools:layout="@layout/fragment_hard">

        <action
            android:id="@+id/action_HardFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>